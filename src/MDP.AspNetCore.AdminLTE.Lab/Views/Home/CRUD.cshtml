@{
    Layout = "_layout";
}

<!-- header -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row my-1">
            <div class="col-sm-6">
                <h1 class="m-0">CRUD</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item active">CRUD</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<!-- content -->
<div class="content">
    <div class="container-fluid">

        <!-- search -->
        <div class="card show collapse in" id="searchPanel">
            <div class="card-body pb-1">
                <form class="row" action="/pages/crud.html" method="get">

                    <!-- condition -->
                    <div class="col-12 col-sm-auto form-group">
                        <label for="inputName" class="form-label">客戶姓名：</label>
                        <input id="inputName" type="text" class="form-control d-inline-block" style="width:200px">
                    </div>
                    <div class="col-12 col-sm-auto form-group">
                        <label for="inputPhone" class="form-label">客戶電話：</label>
                        <input id="inputPhone" type="text" class="form-control d-inline-block" style="width:200px">
                    </div>
                    <div class="col-12 col-sm-auto form-group">
                        <label for="inputAddress" class="form-label">客戶地址：</label>
                        <input id="inputAddress" type="text" class="form-control d-inline-block" style="width:200px">
                    </div>

                    <!-- command -->
                    <div class="col-12 col-sm-auto form-group">
                        <a class="btn btn-rounded btn-primary" onclick="alert('查詢');"><i class="fa fa-search"></i>&nbsp;查詢</a>
                        <a class="btn btn-rounded btn-secondary" onclick="alert('重置');"><i class="fa fa-eraser"></i>&nbsp;重置</a>
                    </div>

                </form>
            </div>
        </div>

        <!-- list -->
        <div class="card">
            <div class="card-body pb-1">

                <!-- command -->
                <div class="row mb-3">
                    <div class="col-auto mr-auto">
                        <a class="btn btn-primary" onclick="alert('新增');"><i class="fa fa-plus"></i>&nbsp;新增</a>
                        <a class="btn btn-success" onclick="alert('修改');"><i class="fa fa-edit"></i>&nbsp;修改</a>
                        <a class="btn btn-danger" onclick="alert('刪除');"><i class="fa fa-times"></i>&nbsp;刪除</a>
                        <a class="btn btn-warning" onclick="alert('匯入');"> <i class="fa fa-upload"></i>&nbsp;匯入</a>
                        <a class="btn btn-info" onclick="alert('匯出');"> <i class="fa fa-download"></i>&nbsp;匯出</a>
                    </div>
                    <div class="col-auto">
                        <div class="btn-group">
                            <button class="btn btn-default" type="button" title="顯示/隱藏查詢" data-toggle="collapse" data-target="#searchPanel"><i class="fa fa-filter"></i></button>
                            <button class="btn btn-default" type="button" title="重新載入" onclick="alert('重新載入');"><i class="fa fa-sync-alt"></i></button>
                        </div>
                    </div>
                </div>

                <!-- table -->
                <div class="row">
                    <div class="col-12 table-responsive p-0">
                        <table class="table table-sm table-bordered table-striped" role="grid">
                            <thead>
                                <tr>
                                    <th class="th th-fit th-select-all"><input type="checkbox" /></th>
                                    <th>Header001</th>
                                    <th>Header002</th>
                                    <th>Header003</th>
                                    <th>Header004</th>
                                    <th>Header005</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < 10; i++)
                                {
                                    <tr>
                                        <td class="td td-fit"><input type="checkbox" /></td>
                                        <td>Data001</td>
                                        <td>Data002</td>
                                        <td>Data003</td>
                                        <td>Data004</td>
                                        <td>Data005</td>
                                        <td class="td td-fit">
                                            <a class="btn btn-sm btn-info" onclick="alert('內容');"> <i class="fa fa-eye"></i>&nbsp;內容</a>
                                            <a class="btn btn-sm btn-success" onclick="alert('修改');"><i class="fa fa-edit"></i>&nbsp;修改</a>
                                            <a class="btn btn-sm btn-danger" onclick="alert('刪除');"><i class="fa fa-times"></i>&nbsp;刪除</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- pagination -->
                <form class="row justify-content-center mt-2 mt-sm-0" action="/pages/crud.html" method="get">
                    <div class="col-12 col-sm mr-sm-auto">
                        <div class="h5 text-center text-sm-left">顯示第X到第Y筆資料，共Z筆資料</div>
                    </div>
                    <div class="col-auto">
                        <ul class="pagination">
                            <li class="paginate_button page-item disabled"><a class="page-link" href="javascript:void(0)" onclick="alert('Previous');"><i class="fa fa-chevron-left"></i></a></li>
                            <li class="paginate_button page-item active"><a class="page-link" href="javascript:void(0)" onclick="alert('1');">1</a></li>
                            <li class="paginate_button page-item "><a class="page-link" href="javascript:void(0)" onclick="alert('2');">2</a></li>
                            <li class="paginate_button page-item "><a class="page-link" href="javascript:void(0)" onclick="alert('3');">3</a></li>
                            <li class="paginate_button page-item "><a class="page-link" href="javascript:void(0)" onclick="alert('4');">4</a></li>
                            <li class="paginate_button page-item "><a class="page-link" href="javascript:void(0)" onclick="alert('5');">5</a></li>
                            <li class="paginate_button page-item "><a class="page-link" href="javascript:void(0)" onclick="alert('Next');"><i class="fa fa-chevron-right"></i></a></li>
                        </ul>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>       